<main class="content">
	<div class="container-fluid p-0">

		<h3>Emails</h3>
		<div class="row m-0 p-3 mt-2 mb-5 bg-white">
			<% @emails.each do |email| %>
			   <div class="col-3 p-1 ">
				  <%= link_to email, administration_profile_path(User.find_by("email = ?", email.to_s).profile.id), class:"text-infos" %>
				</div>
				<% end %>
			</div>
	 	</div>

	<h3 class="mb-3">Items</h3>

		<div class="row">
			<div class="col-12">

				<div class="card">
					<div class="table-responsive">
						<table class="table table-striped table-hover">
							<thead>
								<tr>
									<th>Prix de d√©part</th>
									<th>Pourcentage de remise</th>
									<th>Prix</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<% @items.each do |item| %>
									<%= render partial: "administration/items/table_row", locals: {item: item} %>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>

	</div>
</main>
